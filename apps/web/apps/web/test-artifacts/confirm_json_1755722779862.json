{
  "agentSpec": {
    "name": "BasicAgent",
    "inputs": {
      "userQuery": {
        "type": "string",
        "description": "The user's initial query or request"
      }
    },
    "sources": {
      "web": {
        "provider": "google",
        "params": {
          "numResults": 5
        }
      }
    },
    "analysis": {
      "sentiment": {
        "provider": "openai",
        "model": "text-davinci-003"
      }
    },
    "decision": {
      "provider": "openai",
      "model": "gpt-3.5-turbo"
    },
    "actions": {
      "respondToUser": {
        "type": "function",
        "description": "Sends a response back to the user"
      }
    },
    "channels": [
      "chat",
      "email"
    ]
  }
}