{
  "agentSpec": {
    "name": "BasicAgent",
    "inputs": {
      "userQuery": {
        "type": "string",
        "description": "The user's input query"
      }
    },
    "sources": {
      "web": {
        "provider": "google",
        "params": {
          "query": "{inputs.userQuery}"
        }
      }
    },
    "analysis": {
      "summarize": {
        "input": "{sources.web}",
        "provider": "openai",
        "params": {
          "prompt": "Summarize the following web search results: {input}"
        }
      }
    },
    "decision": {
      "determineResponse": {
        "input": "{analysis.summarize}",
        "provider": "openai",
        "params": {
          "prompt": "Based on the summary, determine an appropriate response to the user query: {inputs.userQuery}"
        }
      }
    },
    "actions": {
      "respondToUser": {
        "input": "{decision.determineResponse}",
        "type": "function",
        "function": "displayText"
      }
    },
    "channels": [
      {
        "type": "text",
        "provider": "console"
      }
    ]
  }
}