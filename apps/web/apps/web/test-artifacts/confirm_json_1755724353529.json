{
  "agentSpec": {
    "name": "BasicAgent",
    "inputs": {
      "userQuery": {
        "type": "string",
        "description": "The user's input query"
      }
    },
    "sources": {
      "twitter": {
        "provider": "twitter",
        "params": {
          "searchQuery": "{{inputs.userQuery}}"
        }
      },
      "webSearch": {
        "provider": "googleSearch",
        "params": {
          "query": "{{inputs.userQuery}}"
        }
      }
    },
    "analysis": {
      "sentiment": {
        "provider": "openai",
        "params": {
          "prompt": "Analyze the sentiment of the following text: {{sources.twitter.text}}"
        }
      },
      "summary": {
        "provider": "openai",
        "params": {
          "prompt": "Summarize the following search results: {{sources.webSearch.results}}"
        }
      }
    },
    "decision": {
      "provider": "openai",
      "params": {
        "prompt": "Based on the sentiment analysis and search summary, decide on the next action."
      }
    },
    "actions": {
      "generateResponse": {
        "provider": "openai",
        "params": {
          "prompt": "Generate a response based on the decision: {{decision.result}}"
        }
      }
    },
    "channels": [
      {
        "type": "slack",
        "params": {
          "channelId": "general"
        }
      }
    ]
  }
}