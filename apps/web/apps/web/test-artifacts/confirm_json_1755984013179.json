{
  "agentSpec": {
    "name": "BasicAgent",
    "inputs": {
      "query": {
        "type": "string",
        "description": "User's input query"
      }
    },
    "sources": {
      "twitter": {
        "provider": "twitter",
        "params": {
          "searchQuery": "{{inputs.query}}"
        }
      },
      "web": {
        "provider": "googleSearch",
        "params": {
          "query": "{{inputs.query}}"
        }
      }
    },
    "analysis": {
      "sentiment": {
        "provider": "openai",
        "params": {
          "prompt": "Analyze the sentiment of the following text: {{sources.twitter.text}}"
        }
      },
      "summary": {
        "provider": "openai",
        "params": {
          "prompt": "Summarize the following web search results: {{sources.web.results}}"
        }
      }
    },
    "decision": {
      "provider": "openai",
      "params": {
        "prompt": "Based on the sentiment analysis and web search summary, decide on the next action to take."
      }
    },
    "actions": {
      "respond": {
        "provider": "openai",
        "params": {
          "prompt": "Generate a response based on the decision: {{decision.result}}"
        }
      }
    },
    "channels": [
      {
        "type": "chat",
        "provider": "discord"
      }
    ]
  }
}