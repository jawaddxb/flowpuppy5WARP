{
  "agentSpec": {
    "name": "BasicAgent",
    "inputs": {
      "userQuery": {
        "type": "string",
        "description": "The user's input query"
      }
    },
    "sources": {
      "twitter": {
        "provider": "twitter",
        "params": {
          "searchTerm": "{{inputs.userQuery}}"
        }
      },
      "webSearch": {
        "provider": "googleSearch",
        "params": {
          "query": "{{inputs.userQuery}}"
        }
      }
    },
    "analysis": {
      "sentiment": {
        "provider": "openai",
        "params": {
          "prompt": "Analyze the sentiment of: {{sources.twitter.results}}"
        }
      },
      "summary": {
        "provider": "openai",
        "params": {
          "prompt": "Summarize the following search results: {{sources.webSearch.results}}"
        }
      }
    },
    "decision": {
      "provider": "openai",
      "params": {
        "prompt": "Based on the sentiment analysis {{analysis.sentiment}} and web search summary {{analysis.summary}}, decide on the most appropriate response to the user query."
      }
    },
    "actions": {
      "generateResponse": {
        "provider": "openai",
        "params": {
          "prompt": "Generate a response based on the decision: {{decision.result}}"
        }
      }
    },
    "channels": [
      {
        "type": "chat",
        "provider": "discord"
      }
    ]
  }
}