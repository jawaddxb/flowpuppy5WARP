{
  "agentSpec": {
    "name": "ExampleAgent",
    "inputs": {},
    "sources": {
      "twitter": {
        "provider": "twitter",
        "apiKey": "your_api_key",
        "apiSecret": "your_api_secret"
      },
      "facebook": {
        "provider": "facebook",
        "appId": "your_app_id",
        "appSecret": "your_app_secret"
      }
    },
    "analysis": {
      "sentiment": {
        "model": "sentiment-analysis-v1",
        "threshold": 0.5
      }
    },
    "decision": {
      "strategy": "threshold",
      "thresholdValue": 0.7
    },
    "actions": {
      "notify": {
        "method": "email",
        "recipient": "user@example.com"
      }
    },
    "channels": [
      "email",
      "sms",
      "push"
    ]
  }
}