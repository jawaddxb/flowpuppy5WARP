{
  "agentSpec": {
    "name": "ExampleAgent",
    "inputs": {},
    "sources": {
      "twitter": {
        "provider": "twitter",
        "apiKey": "your_api_key",
        "apiSecret": "your_api_secret"
      },
      "facebook": {
        "provider": "facebook",
        "appId": "your_app_id",
        "appSecret": "your_app_secret"
      }
    },
    "analysis": {
      "sentiment": {
        "provider": "sentimentAnalysisAPI",
        "threshold": 0.5
      }
    },
    "decision": {
      "strategy": "automatedResponse",
      "criteria": {
        "engagement": {
          "likes": 100,
          "shares": 50
        }
      }
    },
    "actions": {
      "respond": {
        "provider": "responseHandler",
        "template": "Thank you for your feedback!"
      }
    },
    "channels": [
      "twitter",
      "facebook",
      "email"
    ]
  }
}