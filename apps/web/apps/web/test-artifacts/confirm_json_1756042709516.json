{
  "agentSpec": {
    "name": "ExampleAgent",
    "inputs": {
      "input1": {
        "type": "text",
        "provider": "exampleProvider"
      }
    },
    "sources": {
      "twitter": {
        "provider": "twitter",
        "account": "exampleAccount"
      }
    },
    "analysis": {
      "type": "sentiment",
      "provider": "sentimentAnalysisProvider"
