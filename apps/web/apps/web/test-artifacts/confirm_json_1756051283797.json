{
  "agentSpec": {
    "name": "ExampleAgent",
    "inputs": {},
    "sources": {
      "twitter": {
        "provider": "twitter",
        "apiKey": "your_api_key",
        "apiSecret": "your_api_secret"
      },
      "facebook": {
        "provider": "facebook",
        "appId": "your_app_id",
        "appSecret": "your_app_secret"
      }
    },
    "analysis": {
      "type": "sentiment",
      "model": "sentiment-analysis-v1"
    },
    "decision": {
      "threshold": 0.5,
      "actionIfAbove": "notify",
      "actionIfBelow": "ignore"
    },
    "actions": {
      "notify": {
        "type": "email",
        "recipient": "user@example.com"
      },
      "ignore": {
        "type": "log",
        "message": "No action taken."
      }
    },
    "channels": [
      {
        "type": "sms",
        "provider": "twilio",
        "phoneNumber": "+1234567890"
      },
      {
        "type": "push",
        "provider": "firebase",
        "appId": "your_firebase_app_id"
      }
    ]
  }
}