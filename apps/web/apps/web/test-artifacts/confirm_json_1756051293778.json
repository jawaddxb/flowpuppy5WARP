{
  "agentSpec": {
    "name": "ExampleAgent",
    "inputs": {},
    "sources": {
      "twitter": {
        "provider": "twitter",
        "apiKey": "your_api_key",
        "apiSecret": "your_api_secret"
      },
      "facebook": {
        "provider": "facebook",
        "appId": "your_app_id",
        "appSecret": "your_app_secret"
      }
    },
    "analysis": {
      "sentiment": {
        "model": "sentiment-analysis-v1",
        "threshold": 0.5
      }
    },
    "decision": {
      "strategy": "auto",
      "criteria": {
        "engagement": {
          "minLikes": 10,
          "minShares": 5
        }
      }
    },
    "actions": {
      "post": {
        "message": "Automated response based on analysis.",
        "platforms": [
          "twitter",
          "facebook"
        ]
      }
    },
    "channels": [
      "twitter",
      "facebook"
    ]
  }
}