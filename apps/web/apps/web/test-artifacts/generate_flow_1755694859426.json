{
  "flowDoc": {
    "version": "1.1",
    "lanes": [
      {
        "id": "lane-input",
        "title": "Input",
        "order": 1
      },
      {
        "id": "lane-transform",
        "title": "Transform",
        "order": 2
      },
      {
        "id": "lane-decision",
        "title": "Decision",
        "order": 3
      },
      {
        "id": "lane-output",
        "title": "Output",
        "order": 4
      }
    ],
    "nodes": [
      {
        "id": "temperature-sensor",
        "type": "sensor",
        "title": "sensor",
        "laneId": "lane-transform",
        "data": {
          "sensorType": "temperature",
          "units": "celsius",
          "updateInterval": 60
        }
      },
      {
        "id": "thermostat-control",
        "type": "actuator",
        "title": "actuator",
        "laneId": "lane-transform",
        "data": {
          "deviceType": "thermostat",
          "minTemp": 20,
          "maxTemp": 25
        }
      },
      {
        "id": "temperature-logic",
        "type": "function",
        "title": "function",
        "laneId": "lane-transform",
        "data": {
          "code": "if (input.temperature < 20) return {action: 'heat'}; else if (input.temperature > 25) return {action: 'cool'}; else return {action: 'maintain'};"
        }
      }
    ],
    "edges": [
      {
        "id": "e0",
        "source": {
          "nodeId": "temperature-sensor"
        },
        "target": {
          "nodeId": "temperature-logic"
        },
        "label": "Current Temperature"
      },
      {
        "id": "e1",
        "source": {
          "nodeId": "temperature-logic"
        },
        "target": {
          "nodeId": "thermostat-control"
        },
        "label": "Heating/Cooling Action"
      }
    ]
  }
}