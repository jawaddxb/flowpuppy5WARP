{
  "flowDoc": {
    "version": "1.1",
    "lanes": [
      {
        "id": "lane-input",
        "title": "Input",
        "order": 1
      },
      {
        "id": "lane-transform",
        "title": "Transform",
        "order": 2
      },
      {
        "id": "lane-decision",
        "title": "Decision",
        "order": 3
      },
      {
        "id": "lane-output",
        "title": "Output",
        "order": 4
      }
    ],
    "nodes": [
      {
        "id": "weather-api",
        "type": "APICall",
        "title": "APICall",
        "laneId": "lane-transform",
        "provider": "openweathermap",
        "data": {
          "provider": "openweathermap",
          "endpoint": "/weather",
          "params": {
            "q": "${city}",
            "units": "metric",
            "appid": "${API_KEY}"
          }
        }
      },
      {
        "id": "temperature-check",
        "type": "Condition",
        "title": "Condition",
        "laneId": "lane-transform",
        "data": {
          "condition": "${weather-api.main.temp} > 20"
        }
      },
      {
        "id": "warm-response",
        "type": "TextGeneration",
        "title": "TextGeneration",
        "laneId": "lane-transform",
        "provider": "openai",
        "data": {
          "provider": "openai",
          "prompt": "Generate a cheerful message about the warm weather in ${city} with temperature ${weather-api.main.temp}°C."
        }
      },
      {
        "id": "cold-response",
        "type": "TextGeneration",
        "title": "TextGeneration",
        "laneId": "lane-transform",
        "provider": "openai",
        "data": {
          "provider": "openai",
          "prompt": "Generate a comforting message about the cooler weather in ${city} with temperature ${weather-api.main.temp}°C, suggesting ways to stay warm."
        }
      },
      {
        "id": "output",
        "type": "Output",
        "title": "Output",
        "laneId": "lane-output",
        "data": {
          "field": "message"
        }
      }
    ],
    "edges": [
      {
        "id": "e0",
        "source": {
          "nodeId": "weather-api"
        },
        "target": {
          "nodeId": "temperature-check"
        }
      },
      {
        "id": "e1",
        "source": {
          "nodeId": "temperature-check"
        },
        "target": {
          "nodeId": "warm-response"
        },
        "label": "Yes"
      },
      {
        "id": "e2",
        "source": {
          "nodeId": "temperature-check"
        },
        "target": {
          "nodeId": "cold-response"
        },
        "label": "No"
      },
      {
        "id": "e3",
        "source": {
          "nodeId": "warm-response"
        },
        "target": {
          "nodeId": "output"
        }
      },
      {
        "id": "e4",
        "source": {
          "nodeId": "cold-response"
        },
        "target": {
          "nodeId": "output"
        }
      }
    ]
  }
}