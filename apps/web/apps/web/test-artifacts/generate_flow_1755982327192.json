{
  "flowDoc": {
    "version": "1.1",
    "lanes": [
      {
        "id": "lane-input",
        "title": "Input",
        "order": 1
      },
      {
        "id": "lane-transform",
        "title": "Transform",
        "order": 2
      },
      {
        "id": "lane-decision",
        "title": "Decision",
        "order": 3
      },
      {
        "id": "lane-output",
        "title": "Output",
        "order": 4
      }
    ],
    "nodes": [
      {
        "id": "get-weather",
        "type": "http-request",
        "title": "http-request",
        "laneId": "lane-transform",
        "data": {
          "url": "https://api.openweathermap.org/data/2.5/weather",
          "method": "GET",
          "params": {
            "q": "London,uk",
            "appid": "{{ENV.OPENWEATHER_API_KEY}}",
            "units": "metric"
          }
        }
      },
      {
        "id": "generate-summary",
        "type": "llm-prompt",
        "title": "llm-prompt",
        "laneId": "lane-transform",
        "provider": "openai",
        "data": {
          "provider": "openai",
          "model": "gpt-3.5-turbo",
          "temperature": 0.7,
          "prompt": "Summarize this weather data in a friendly, concise email:\n{{get-weather.response.body}}"
        }
      },
      {
        "id": "send-email",
        "type": "email-send",
        "title": "email-send",
        "laneId": "lane-transform",
        "data": {
          "to": "user@example.com",
          "subject": "Today's Weather Summary",
          "body": "{{generate-summary.response}}"
        }
      }
    ],
    "edges": [
      {
        "id": "e0",
        "source": {
          "nodeId": "get-weather"
        },
        "target": {
          "nodeId": "generate-summary"
        },
        "label": "Weather data"
      },
      {
        "id": "e1",
        "source": {
          "nodeId": "generate-summary"
        },
        "target": {
          "nodeId": "send-email"
        },
        "label": "Email content"
      }
    ]
  }
}