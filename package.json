{
  "name": "flowpuppy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@flowpuppy/web",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "quickcheck": "node scripts/qa-pipeline.mjs --once",
    "dev:functions": "supabase functions serve || echo 'Install Supabase CLI: https://supabase.com/docs/guides/cli'",
    "dev:mobile": "echo 'Mobile app scaffold is scheduled for Phase 3-4 (Expo). To start earlier, let us know.'",
    "db:migrate": "supabase db push || echo 'Install Supabase CLI and configure your project to run db:migrate'",
    "db:seed": "supabase db reset --seed supabase/seed.sql || echo 'Install Supabase CLI and configure your project to run db:seed'",
    "db:reset": "supabase db reset --seed supabase/seed.sql || echo 'Install Supabase CLI and configure your project to run db:reset'",
    "qa:watch": "node scripts/qa-pipeline.mjs --watch",
    "qa:once": "node scripts/qa-pipeline.mjs --once",
    "qa:batch": "node scripts/qa-batch.mjs --once",
    "qa:batch:watch": "node scripts/qa-batch.mjs --watch",
    "e2e:run": "node scripts/e2e-run.mjs",
    "ab+qa:once": "node scripts/ab-qa.mjs --next=6",
    "ab+qa:loop": "node scripts/ab-qa.mjs --loop --next=6",
    "sprint:batch": "node scripts/sprint-batch.mjs --remote=gpt5 --branch=main --skipCSP=1 --push=1",
    "backlog:sync": "node scripts/backlog-sync.mjs",
    "backlog:impact": "node scripts/backlog-impact.mjs",
    "ab:batch": "node scripts/ab-loop.mjs --next=6",
    "ab:loop": "node scripts/ab-loop.mjs --loop --next=6",
    "ab:mock-foundation": "node scripts/ab-loop.mjs --only=AB-312,AB-313,AB-314,AB-315,AB-316,AB-317,AB-318,AB-319",
    "ab:providers": "node scripts/providers-batch.mjs",
    "ab:planner": "node scripts/planner-batch.mjs",
    "mcp:context7": "npx -y @upstash/context7-mcp@latest",
    "dod:status": "node scripts/dod-tracker.mjs status",
    "dod:update": "node scripts/dod-tracker.mjs update",
    "dod:next": "node scripts/dod-tracker.mjs next",
    "dod:report": "node scripts/dod-tracker.mjs report",
    "dod:auto": "node scripts/dod-executor.mjs single",
    "dod:auto-phase": "node scripts/dod-executor.mjs phase",
    "dod:auto-all": "node scripts/dod-executor.mjs all",
    "dod:checkpoints": "node scripts/dod-executor.mjs checkpoints",
    "dod:reset": "node scripts/dod-executor.mjs reset"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@upstash/context7-mcp": "^1.0.14",
    "chokidar": "^4.0.3",
    "execa": "^9.6.0",
    "prettier": "^3.3.3",
    "strip-ansi": "^7.1.0",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "packageManager": "npm@10.8.0"
}
